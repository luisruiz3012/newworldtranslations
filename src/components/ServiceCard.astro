---
  const { service } = Astro.props;
  import { Icon } from 'astro-icon'
---

<article class="flex flex-col text-green-800 items-center justify-center gap-3 lg:w-1/3 p-5 border  border-green-800 lg:h-72 hover:border-black hover:text-black rounded-lg hover:shadow-lg hover:scale-105 transition-all duration-300 delay-50 ease-in-out cursor-pointer">
  <Icon name={service.icon} class="w-12" />
  <p class="font-bold text-lg">{ service.name }</p>
  <p>{ service.description }</p>
</article>