---
const {title} = Astro.props;
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MobileMenu from '../containers/MobileMenu.astro';
---

<script>
	const header = document.querySelector("#header");

	window.addEventListener('scroll', () => {
		const height = document.documentElement.scrollTop;
		
		if (height > 380) {
			header.className = "w-full bg-white text-black py-4 px-8 z-10 top-0 fixed flex items-center justify-between h-18 transition-all duration-500 shadow-md ease-in-out"
		} else {
			header.className = "w-full bg-gradient-to-b from-gray-800 to-transparent text-white py-4 px-8 bg-opacity-80 z-10 top-0 fixed flex items-center justify-between h-20"
		}
	});
</script>

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="description" content="New World Translations is a translation company that provide services in multiple countries around the world and translates documents from english to spanish and spanish to english">
	</head>
	<body>
    <Header />
		<!-- <MobileMenu /> -->
		<main class="bg-gray-100" id="main">
      <slot />
    </main>
    <Footer />
	</body>
</html>

<style>
	* {
		scroll-behavior: smooth;
	}
</style>