---
import Main from "../layouts/Main.astro";
---

<Main title="New World Translations - Contact">
  <section class="py-20 px-4 lg:px-10">
    <h2 class="text-4xl font-bold text-gray-800 my-10">Contact Us</h2>
    <p class="text-xl mb-10">If you have any questions, feel free to leave your details and question and we will make sure to get back to you as soon as possible.</p>

    <div class="flex flex-col lg:flex-row py-10 items-center justify-center bg-white shadow-md">
      <div class="w-full px-6 lg:w-2/3">
      
        <form method="POST" action="https://formsubmit.co/carolruizm@gmail.com" enctype="multipart/form-data" class="border bg-gray-200 border-gray-300 shadow-md rounded-lg p-5 lg:p-10 flex flex-col gap-10">
          <div class="flex flex-col">
            <label for="name">Name</label>
            <input type="text" required autocomplete="additional-name" name="name" id="name" placeholder="Enter your full name" class="p-2 border border-gray-500 rounded-md" />
          </div>
          <div class="flex flex-col">
            <label for="email">Email</label>
            <input required type="email" autocomplete="additional-email" name="email" id="email" placeholder="Enter your email" class="p-2 border border-gray-500 rounded-md" />
          </div>
      
          <input type="hidden" name="_captcha" value="false">
          <input type="hidden" name="_subject" value="New submission!">
          <input type="hidden" name="_next" value="http://newwtranslations.com/contact">
      
          
          <div class="flex flex-col">
            <label for="message">Message</label>
            <textarea name="message" id="message" rows="5" placeholder="Enter your message" class="p-2 border border-gray-500 rounded-md bg-white"></textarea>
          </div>
      
          <button type="submit" class="bg-green-600 border-2 border-green-800 hover:bg-green-700 hover:underline hover:font-semibold text-white w-full rounded-full px-8 py-4">Get Quote</button>
        </form>
      </div>

      <div class="lg:w-1/3 p-6 bg-white">
        <p class="text-2xl font-semibold mb-5">Contact details:</p>

        <article class="mb-3">
          Email: <br>
          <a href="mailto:carolruizm@gmail.com" class="hover:underline text-blue-900">carolruizm@gmail.com</a>
        </article>

        <article class="mb-3">
          Facebook: <a href="https://www.facebook.com/traduccionesguatemala/" class="hover:underline text-blue-900 text-"> <br>traduccionesguatemala</a>
        </article>

        <article>
          Phone: <br>
          <a href="tel:+502 4220-1234" class="hover:underline text-blue-900">+502 4220-1234</a>
        </article>
      </div>
    </div>
  </section>
</Main>